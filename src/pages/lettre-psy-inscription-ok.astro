---
import { Markdown } from "astro-remote";

import Layout from "../layouts/Layout.astro";

import HeaderPage from "../vue/components/HeaderPage.vue";
import Alert from "../vue/components/Alert.vue";

const apiURL = import.meta.env.PUBLIC_API;

const url = `${apiURL}/pages/?filters[slug]=lettre-psy-inscription-ok&populate[0]=image&populate[1]=link&populate[2]=people&populate[3]=countdown&populate[4]=textwithimage&populate[5]=textwithimage.image&populate[6]=logo`;

const { data } = await fetch(url).then((res) => res.json());

const doc = data[0];

const imageOG = doc.imageOG?.url;

//Display getresponse number of subscribers
const campaignId = "qD1uT";
const getReponseKey = import.meta.env.PUBLIC_GETRESPONSE;
const getResponseApiUrl = `https://api.getresponse.com/v3/campaigns/statistics/list-size?query[campaignId]=${campaignId}&query[groupBy]=total`;

const headers = {
  "X-Auth-Token": `api-key ${getReponseKey}`,
};

const request = new Request(getResponseApiUrl, {
  method: "GET",
  headers,
});

const response = await fetch(request).then((res) => res.json());

const totalSubscribers = response[0].totalSubscribers;

const subscriberID = totalSubscribers + 1;
---

<Layout title={doc.title} metaDescription={doc.description} og={imageOG}>
  <article>
    <div v-if="doc" class="bg-gray-100 pb-14 content-page">
      <HeaderPage doc={doc} />

      <div
        class="container mx-auto py-5 px-5 md:w-10/12 lg:w-9/12 xl:w-7/12 content"
      >
        {
          doc.image?.url && (
            <img
              src={doc.image?.url}
              class="mb-7"
              v-if="doc.image?.url"
              alt={doc.image?.alt}
              height={doc.image?.height}
              width={doc.image?.width}
            />
          )
        }

        <div class="content">
          {doc.content && <Markdown content={doc.content} />}

          <transition name="slide">
            <div>
              <Alert v-if="isSent" type="success" title="Inscription confirmée">
                <p>Vous êtes désormais abonné·e à notre Lettre Psy.</p>
                <p>Vous recevrez la prochaine édition à sa publication.</p>
                <p>
                  Vous pourrez vous désinscrire à tout moment en utilisant le
                  lien de désinscription se trouvant dans chaque Lettre Psy
                </p>
              </Alert>
            </div>
          </transition>

          <!-- Event snippet for Inscription Lettre Psy conversion page (pour google ads) -->
          <script type="text/partytown" async>
            gtag("event", "conversion", {
              send_to: "AW-844972199/J6blCLSQm_gaEKeB9ZID",
            });
          </script>
        </div>
      </div>
    </div>
  </article>
</Layout>
