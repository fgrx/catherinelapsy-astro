---
import "../assets/css/base.scss";

import NavBar from "../vue/components/NavBar.vue";
import Footer from "../vue/components/Footer.vue";
import Message from "../vue/components/Message.vue";
import ContactFabButton from "../vue/components/ContactFabButton.vue";

const { title, metaDescription, imageOG } = Astro.props;

const apiURL = import.meta.env.PUBLIC_API;

const { data: menuFooter } = await fetch(
  `${apiURL}/menus/2?nested&populate=*`
).then(async (res) => {
  const result = await res.json();
  return result.data.attributes.items;
});

const linksFooter = menuFooter?.map((item) => {
  return {
    id: item.id,
    text: item.attributes.title,
    to: item.attributes.url,
  };
});

const { data: menuPrincipal } = await fetch(
  `${apiURL}/menus/1?nested&populate=*`
).then(async (res) => {
  const result = await res.json();
  return result.data.attributes.items;
});

const links = menuPrincipal?.map((item) => {
  const formatChildrensMenu = () => {
    if (item.attributes.children.data.length) {
      return item.attributes.children.data.map((child) => {
        return {
          title: child.attributes.title,
          to: child.attributes.url,
          target: child.attributes.target,
          image: "",
        };
      });
    } else {
      return null;
    }
  };

  return {
    id: item.id,
    text: item.attributes.title,
    to: item.attributes.url,
    meta: { subMenu: item.attributes.children.data.length },
    children: formatChildrensMenu(),
  };
});

// Display message alert
const url = `${apiURL}/Site-configuation?populate=deep,4`;
const { data } = await fetch(url).then((res) => res.json());

const message = data.attributes.Message;

const fonts =
  "https://fonts.googleapis.com/css2?family=Lexend+Deca&family=Playfair+Display:ital,wght@0,400;1,700&display=swap";
---

